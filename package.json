{
  "name": "portal",
  "version": "0.3.1",
  "private": true,
  "scripts": {
    "git:tag": "git tag v`node tasks/get-version.js`",
    "test": "NODE_ENV=test jest",
    "dev": "DEBUG=portal:* node ./bin/www",
    "update:version": "update-version",
    "update:version:major": "update-version --major",
    "update:version:minor": "update-version --minor",
    "update:version:patch": "update-version --patch",
    "docker:build": "docker build -t portal:$(node tasks/get-version.js) .",
    "k8s:update:deployment": "VERSION=$(node tasks/get-version.js) envsubst < k8s/template.deployment.yaml > k8s/deployment.yaml"
  },
  "dependencies": {
    "axios": "0.20.0",
    "cookie-parser": "1.4.5",
    "debug": "4.2.0",
    "ejs": "2.7.4",
    "express": "4.17.1",
    "http-errors": "1.8.0",
    "morgan": "1.10.0"
  },
  "devDependencies": {
    "@jahid90/package": "1.0.1",
    "husky": "^4.3.0",
    "jest": "26.5.3",
    "supertest": "5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm test && pnpm run update:version && git add .app-metadata.json"
    }
  }
}
